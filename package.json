{
  "name": "figma-tokens-convert",
  "version": "1.2.0",
  "description": "This program is a command-line tool for converting design tokens from a JSON file into CSS variables. It allows designers and developers to use design tokens in their front-end code, ensuring consistency and making it easier to update the design system.",
  "main": "lib/main.js",
  "scripts": {

    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    
    "prepublishOnly" : "npm test && npm run lint",
    
    "prepare" : "npm run build",
    "build": "tsc",

    "watch": "tsc -w",
    "start": "node lib/main.js ./src/__tests__/example_files/actual-tokens.json ./output.css test",
    
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GFY-Holding/converter.git"
  },
  "keywords": [
    "figma",
    "design",
    "tokens",
    "design-tokens",
    "system",
    "script",
    "cli"
  ],
  "author": "GFY Holding | Kostiantyn Bielienko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GFY-Holding/converter/issues"
  },
  "homepage": "https://github.com/GFY-Holding/converter#readme",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "lib/**/*"
  ]
}
